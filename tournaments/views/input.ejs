<div class="form-group"><%
        if(typeof label != "undefined") {
            %>
            <label for="<%=field%>"><%=label%></label><%
        }
        %>
        <input type="<%=type%>" name="<%=field%>" id="<%=field%>" <%
        if(typeof data != "undefined" && data[field]) {
            %>value="<%=data[field]%>"<%
        }
        if(typeof step != "undefined") {
            %> step="<%=step%>"<%
        }
        %>/><%
        if(typeof validation != "undefined" && validation[field]) {
            %><span class="validation-alert"><%
            validation[field].forEach(element => {
                %><%=element%> <% 
            });
            %></span>
            <%
        }
    %>
    </div>